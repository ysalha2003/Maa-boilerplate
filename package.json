{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Modern Django + Tailwind CSS boilerplate",
  "scripts": {
    "build:css": "tailwindcss -i ./static/css/src/input.css -o ./static/css/dist/output.css --minify",
    "watch:css": "tailwindcss -i ./static/css/src/input.css -o ./static/css/dist/output.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/container-queries": "^0.1.1",
    "daisyui": "^4.12.14",
    "tailwindcss": "^3.4.15"
  }
}
